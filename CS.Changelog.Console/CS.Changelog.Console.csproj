<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <Features>flow-analysis</Features>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <LangVersion>7.1</LangVersion>
    <!-- Waiting for c# 8 for checking of null-references -->
    <NoWarn>CA1062</NoWarn>
    <Authors>Robert Sirre</Authors>
    <Company>CS /webworks</Company>
    <Product>Changelog generator</Product>
    <Description>Git commit history-based changelog generator.</Description>
    <AssemblyVersion>1.2.0.0</AssemblyVersion>
    <Version>1.2.0</Version>
    <Copyright>CS /webworks 2019</Copyright>
    <PackageLicenseExpression>UNLICENSED</PackageLicenseExpression>
    <PackageProjectUrl>https://cswebworks.atlassian.net/wiki/spaces/CSComponents/pages/679903307/Change+log+generator</PackageProjectUrl>
    <RepositoryUrl>https://tfs.cs.nl/tfs/DefaultCollection/_git/CS.Changelog</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageReleaseNotes>Migrated to .Net core</PackageReleaseNotes>
    <ApplicationIcon />
    <StartupObject />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.4.3" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.3">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CS.Changelog\CS.Changelog.csproj" />
  </ItemGroup>

</Project>
