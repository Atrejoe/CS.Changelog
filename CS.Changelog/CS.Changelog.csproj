<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Features>flow-analysis</Features>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <LangVersion>7.1</LangVersion>
    <!-- Waiting for c# 8 for checking of null-references -->
    <NoWarn>CA1062</NoWarn>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.2.0.0</AssemblyVersion>
    <FileVersion>1.2.0.0</FileVersion>
    <Copyright>CS /webworks 2019</Copyright>
    <Authors>Robert Sirre</Authors>
    <Company>CS /webworks</Company>
    <Product>CS.Changelog generator</Product>
    <Description>A git-commit based changelog generator.
Can also be used for changelog deserialization.
    
High-level functional documentation:
https://cswebworks.atlassian.net/wiki/spaces/CSComponents/pages/679903307/Change+log+generator

Command-line installer (&amp; technical documentation) can be found here:
http://documentation.hq.local/CSToolset/CS.Changelog
</Description>
    <PackageProjectUrl>https://cswebworks.atlassian.net/wiki/spaces/CSComponents/pages/679903307/Change+log+generator</PackageProjectUrl>
    <RepositoryUrl>https://tfs.cs.nl/tfs/DefaultCollection/_git/CS.Changelog</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageLicenseExpression>UNLICENSED</PackageLicenseExpression>
    <Version>1.2.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\markdownpad-github\markdownpad-github.css" Link="Exporters\Html\markdownpad-github.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Markdig.Signed" Version="0.17.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.3">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

</Project>
